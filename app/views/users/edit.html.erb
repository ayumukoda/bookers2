<main>
    <p id="notice"><%= notice %></p>
    
    <!--エラーメッセージを入れる-->
    <% if @user.errors.any? %>
      <%= @user.errors.count %>件の情報が更新できませんでした
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2>User info</h2>
            
            <%= form_with model: @user do |f| %>
  
              <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name %>
              </div>
              
              <label for="inputImage">ProfileImage</label>
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
              
              <div class="form-group">
              <%= f.label :introduction,"introduction" %>
              <%= f.text_area :introduction, class: "form-control" %>
              </div>
              
              <div class="form-group">
              <%= f.submit class: "btn btn-primary col-xs-12" %>
              </div>
            <% end %>
            </div>
        </div>
    </div>
</main>
