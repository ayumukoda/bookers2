<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <img scr="app/assets/images/no_image.jpg">
      <table class="table-left">
        <tbody>
          <tr>
            <th>name</th>
            <th>qqq</th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(params[:id]), class: 'btn btn-outline-secondary btn-block' do %>
           <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
        
        <h4>Title</h4>
        <%= f.text_field :title %>
      
        <h4>opinion</h4>
        <%= f.text_area :opinion %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table-right">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>