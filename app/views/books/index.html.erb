<!--ここが/booksのページ-->
<p id="notice">Welcome! You have signed up successfully.</p>
<div class="container">
  <div class="row">
<%= render 'users/list', book: @book,user: current_user %>


    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %><!--@booksではなく@book?7/27疑問-->
        <tr>
           <td>
             <%= link_to user_path(book.user.id) do %>
             <%= image_tag book.user.get_profile_image(100,100) %>
             <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>