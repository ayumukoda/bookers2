
<p id="notice"><%= notice %></p>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
    
<div class="container px-5 px-sm-0">
  <div class="row">
<%= render 'users/list', book: @a,user: @user %> 
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-striped">
        <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
              <tr>
                <td>
                  <%= link_to user_path(@user.id) do %>
                  <%= image_tag @user.get_profile_image(100,100) %><!--ユーザーの画像を表示させる-->
                <br>
                  <%= @user.name %><!--ユーザーの名前を表示-->
                  <% end %>
                  </td>
                <td><%= link_to @book.title, books_path %></td>
                <td><%= @book.body %></td>
                <% if user_signed_in? && current_user.id == @book.user_id %>
                <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@book.id), class:"btn btn-sm btn-danger", method: :delete, data: { confirm: "削除してもよろしいですか？" } %></td>
                <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>