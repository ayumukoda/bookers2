<!--booksのeditページ-->
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
  		
  		<% if @book.errors.any? %>
        <%= @book.errors.count %>件の投稿が保存できませんでした
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
  		<%= form_with model: @book do |f| %>
  		  <label for="title">title</label><br>
        <%= f.text_field :title, autofocus: true, id:"title"%><br>
        <label for="opinion">opinion</label><br>
        <%= f.text_field :body, autofocus: true, id:"opinion"%><br>
        <%= f.submit class: "btn btn-primary col-xs-12" %>
      <% end %>

  		<%= link_to "Show", book_path(@book.id) %>
  		"|"
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>