<!--booksのeditページ-->
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
  		
  		<!--ここはもう一度理解が必要-->
  		<div class="error">
        <div class="error_messege">
          <% if @book.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
      
  		<%= form_with model: @book do |f| %>
  		  <label for="title">title</label><br>
        <%= f.text_field :title, autofocus: true, id:"title"%><br>
        <label for="opinion">opinion</label><br>
        <%= f.text_field :body, autofocus: true, id:"opinion"%><br>
        <%= f.submit class: "btn btn-primary col-xs-12" %>
      <% end %>

  		<%= link_to "Show", book_path(@book.id) %>
  		"|"
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>